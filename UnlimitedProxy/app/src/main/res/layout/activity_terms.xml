<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_basic_background"
    tools:context=".ui.TermsActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/terms_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"/>

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="195dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_of_service_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/pro_ind_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/agree_bt"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:text="@string/agree_amp_contionue"
        android:background="@drawable/shape_e_25"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>