<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_16"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="23dp">

    <TextView
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:text="Confirm"
        android:textColor="#ff2c2c2c"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="210dp"
        android:layout_height="19dp"
        android:text="Whether to replace the server"
        android:textColor="#ff727272"
        android:textSize="16sp"
        android:layout_marginTop="13dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center">

        <Button
            android:id="@+id/cancel_bt"
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_gray_12"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FF2C2C2C"
            android:layout_margin="3dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/replace_bt"
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_teal_12"
            android:text="Replace"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>